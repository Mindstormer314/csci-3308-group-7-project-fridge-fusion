<div class="d-flex align-items-center justify-content-center">
        {{#if profile_img}}
            <img src={{profile_img}} class="rounded-circle" alt="Profile Image">
        {{else}}
            <i class="bi-person-circle" style="color:black"></i>
        {{/if}}
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <h2>{{profile_name}}</h2>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <h3>{{profile_username}}</h3>
    </div>
    <div class="d-flex align-items-center justify-content-center">
        <h3>Friends: 2</h3>
    </div>